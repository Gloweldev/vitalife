generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@map("categories")
}

model Product {
  id               String          @id @default(uuid())
  name             String
  slug             String          @unique
  description      String
  shortDescription String
  fullDescription  String          @default("")
  categoryId       String?
  category         Category?       @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  isFeatured       Boolean         @default(false)
  isActive         Boolean         @default(true)  // Visibility in public store
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  
  images           ProductImage[]
  flavors          ProductFlavor[]
  benefits         ProductBenefit[]
  
  @@map("products")
}

model ProductImage {
  id        String   @id @default(uuid())
  url       String
  isMain    Boolean  @default(false)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@map("product_images")
}

model ProductFlavor {
  id        String   @id @default(uuid())
  name      String
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@map("product_flavors")
}

model ProductBenefit {
  id        String   @id @default(uuid())
  text      String
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@map("product_benefits")
}

// Blog Categories
model BlogCategory {
  id        String   @id @default(uuid())
  name      String   @unique
  slug      String   @unique
  posts     Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("blog_categories")
}

model Post {
  id           String        @id @default(uuid())
  title        String
  slug         String        @unique
  excerpt      String?
  coverImage   String?       // S3 key for cover image
  content      Json          // Array of content blocks
  categoryId   String?
  category     BlogCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  postType     String        @default("article") // article, recipe, tip
  status       String        @default("draft") // draft, published, archived
  author       String?
  readTime     String?
  views        Int           @default(0)
  postViews    PostView[]
  publishedAt  DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@map("posts")
}

// Post Views Analytics - tracks individual views with deduplication
model PostView {
  id           String   @id @default(uuid())
  postId       String
  post         Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  // Deduplication
  fingerprint  String   // Browser fingerprint for deduplication
  viewDate     String   // Date string (YYYY-MM-DD) for daily deduplication
  
  // Visitor metadata
  ip           String?  // Anonymized IP (last octet zeroed)
  userAgent    String?
  referrer     String?
  country      String?
  city         String?
  device       String?  // mobile, tablet, desktop
  browser      String?
  os           String?
  
  // Timestamps
  viewedAt     DateTime @default(now())

  // Unique constraint: same fingerprint can only count once per post per day
  @@unique([postId, fingerprint, viewDate])
  @@index([postId])
  @@index([viewedAt])
  @@index([fingerprint])
  @@map("post_views")
}

